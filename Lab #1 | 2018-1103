#include <stdio.h>
#include <string.h>

#define BUFFER_SIZE 10000

int main(int argc, char *argv[])
{
	
	if(argc == 1){
	    
		char str[BUFFER_SIZE];
		fgets(str, BUFFER_SIZE, stdin);
		while(!feof(stdin)){
			printf("%s", str);
			fgets(str, BUFFER_SIZE, stdin);
		}
		return 0;
	}
	
	int i = 1;
	while(i < argc){
		if(!strcmp("-", argv[i])){
			char str[BUFFER_SIZE];
			fgets(str, BUFFER_SIZE, stdin);
			while(!feof(stdin)){
				printf("%s", str);
				fgets(str, BUFFER_SIZE, stdin);
			}
			
			if(feof(stdin)){
			    continue;
			}

		}
		
		FILE *file;
		file = fopen(argv[i], "r");
		if(file == NULL){
			printf("wcat: no se puede abrir el archivo ya que no existe %s\n", argv[i]);
			return -1;
		}
		char x;
		while((x=fgetc(file)) != EOF){
			printf("%c", x);
		}
		fclose(file);
	    i++;
	}
	
	return 0;
}
